<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="userDialog"
                type="app.appworks.school.stylish.data.UserDialog" />
        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="15dp"
            android:paddingStart="60dp"
            android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_chatbot_user_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/my_message"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_chatbot_user_message_body"
                    android:textColor="#fff"
                    android:padding="10dp"
                    android:elevation="2dp"
                    android:textSize="18dp"
                    android:layout_alignParentStart="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@{userDialog.message}"
                    tools:text="ljfdslkfjlsdfdsafafdafdsfdsafdfdsafdsafdsdsaaj"
                    android:maxWidth="120dp"
                    />

            <ImageView
                    android:id="@+id/imageview_chatbot_user_product_image"
                    android:layout_width="210dp"
                    android:layout_height="280dp"
                    app:layout_constraintTop_toBottomOf="@id/textview_chatbot_user_message_body"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    android:visibility='@{userDialog.productId == null || userDialog.productId == "" ? View.GONE : View.VISIBLE}'
                    app:imageUrl="@{userDialog.productImage}"
                    tools:src="@drawable/ic_placeholder"
                    android:scaleType="centerCrop"
                    />
            <TextView
                    android:id="@+id/textview_chatbot_user_product_image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/imageview_chatbot_user_product_image"
                    app:layout_constraintStart_toStartOf="@id/imageview_chatbot_user_product_image"
                    app:layout_constraintEnd_toEndOf="@id/imageview_chatbot_user_product_image"
                    android:visibility='@{userDialog.productId == null || userDialog.productId == "" ? View.GONE : View.VISIBLE}'
                    android:text="@{userDialog.productTitle}"
                    tools:text="ldfjaldjs aklfjdslka jfldskaj fklsdjaklf jdsalkfjsakl"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="20dp"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
                app:layout_constraintBottom_toBottomOf="@id/layout_chatbot_user_content"
                app:layout_constraintEnd_toStartOf="@id/layout_chatbot_user_content"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:dateToString="@{userDialog.sentDate}"
                tools:text="fjslajfldksa"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>