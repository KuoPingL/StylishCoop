<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_login_corner"
                >
            <TextView
                    android:id="@+id/text_heightandweight_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="請輸入身高與體重"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"/>
            <EditText
                    android:id="@+id/edit_heightandweight_height"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@id/text_heightandweight_title"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:inputType="numberDecimal"
                    android:hint="身高 (cm)"/>
            <TextView
                    android:id="@+id/text_heightandweight_height_error"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/edit_heightandweight_height"
                    app:layout_constraintEnd_toEndOf="@id/edit_heightandweight_height"
                    app:layout_constraintTop_toBottomOf="@id/edit_heightandweight_height"
                    android:visibility="gone"
                    android:textColor="@color/red_d0021b"/>
            <EditText
                    android:id="@+id/edit_heightandweight_weight"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@id/text_heightandweight_height_error"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:inputType="numberDecimal"
                    android:hint="體重 (kg)"/>
            <TextView
                    android:id="@+id/text_heightandweight_weight_error"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/edit_heightandweight_weight"
                    app:layout_constraintEnd_toEndOf="@id/edit_heightandweight_weight"
                    app:layout_constraintTop_toBottomOf="@id/edit_heightandweight_weight"
                    android:visibility="gone"
                    android:textColor="@color/red_d0021b"/>
            <Button
                    android:id="@+id/button_heightandweight_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/text_heightandweight_weight_error"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="確定"
                    android:background="@drawable/bg_login_button"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>