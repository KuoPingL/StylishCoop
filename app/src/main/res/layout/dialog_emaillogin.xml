<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="viewModel"
                type="app.appworks.school.stylish.login.EmailLoginViewModel" />
        <variable
                name="dialog"
                type="app.appworks.school.stylish.login.EmailLoginDialog" />
        <import type="android.view.View"/>
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".login.EmailLoginDialog"
            android:background="#fff">

        <TextView
                android:id="@+id/textview_emaillogin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:fontFamily="@font/noto_sans"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                tools:text="WELCOME" />

        <LinearLayout
                android:id="@+id/layout_emaillogin_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:layout_marginTop="20dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/sign_in"
                    android:textAlignment="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{() -> viewModel.setSignIn()}"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/sign_up"
                    android:textAlignment="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{()->viewModel.setSignUp()}"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

            <!--Check Visibility -->
            <EditText
                    android:id="@+id/edit_emaillogin_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/hint_email_required"
                    android:layout_marginTop="10dp"
                    android:text="@={viewModel.userEmail}"/>
            <TextView
                    android:id="@+id/textview_emaillogin_email_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_d0021b"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:visibility='@{viewModel.emailErrorMessage == null  ? View.GONE:View.VISIBLE}'
                    tools:text="電子郵件格式有誤"
                    android:text="@{viewModel.emailErrorMessage}"/>

            <EditText
                    android:id="@+id/edit_emaillogin_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/hint_password_required"
                    android:text="@={viewModel.password}"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_d0021b"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    tools:text="密碼格式有誤"
                    android:visibility="@{viewModel.passwordErrorMessage == null ? View.GONE: View.VISIBLE}"
                    android:text="@{viewModel.passwordErrorMessage}"/>

        </LinearLayout>

        <Button
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:textSize="16sp"
                android:fontFamily="@font/noto_sans"
                android:text="@{viewModel.confirmationMessage}"
                android:layout_marginBottom="5dp"
                android:onClick="@{()->viewModel.signInOrSignUp()}"/>
        <Button
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:textSize="16sp"
                android:fontFamily="@font/noto_sans"
                android:layout_marginBottom="20dp"
                android:text="@string/cancel_text"
                android:onClick="@{()->dialog.dismiss()}"
                />

    </LinearLayout>
</layout>